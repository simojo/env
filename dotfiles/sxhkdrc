
# launch terminal emulator
super + Return
	alacritty --config-file /etc/alacritty

# toggle fullscreen for node
super + shift + Return
	bspc node -t \~fullscreen

# launch web browser
super + backslash
  firefox

# launch web browser in private mode
super + shift + backslash
  firefox --private-window

# launch program launcher
super + Tab
	bemenu-run

# restart sxhkd daemon
super + Escape
	pkill -USR1 -x sxhkd

# focus/swap the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the parent node
super + p
	bspc node -f parent

# close node
super + shift + w
  bspc node -c

# kill node
super + shift + q
  bspc node -k

# focus or send to the given desktop
# FIXME: switching desktops and moving nodes between desktops, does not appear to be working.
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'


# FIXME: slock?
# FIXME: systemctl hibernate?
# FIXME: bspwm styling/tweaks?
# FIXME: dmenu styling/tweaks?
# FIXME: dunst-notifications?

# quit/restart bspwm
super + alt + {q,r}
	bspc {quit,wm -r}

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# send the newest marked node to the newest preselected node
super + y
	bspc node newest.marked.local -n newest.!automatic.local



# set the window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}

# FIXME: need more intuitive way to resize..

# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

