[colors]
background = #aaa000000
background-alt = #2D323D
foreground = #909090
color1 = #121212
color2 = #a65f69
color3 = #3b8563
color4 = #b39669
color5 = #487799
color6 = #b9637e
color8 = #ced4db

[bar/mybar]
override-redirect = false
bottom = false
background = ${colors.background}
foreground = ${colors.foreground}
fixed-center = true
width = 100%
height = 20
radius = 0.0
line-size = 0
line-color = #f00
offset-y = 0
offset-x = 0

font-0 = Hack:style=Regular:pixelsize=11;2

modules-right = network alsa backlight battery date
modules-center =
modules-left =  bspwm
; Position of the system tray window
tray-position = left
tray-maxsize = 15
tray-background = ${colors.background}
tray-offset-x = 0
tray-offset-y = 0
; Pad the sides of each tray icon
tray-padding = 1

[module/bspwm]
type = internal/bspwm
format = <label-state> <label-mode>

label-empty-foreground = ${colors.color8}
label-focused-background = ${colors.background-alt}
label-focused = %name%
label-focused-padding = 1
label-occupied = %name%
label-occupied-padding = 1
label-empty = %name%
label-empty-padding = 1

label-monocle = M
label-tiled = T
label-floating = F
label-pseudotiled = P

[settings]
label-focused-underline= ${colors.background}
throttle-output = 5
throttle-output-for = 10
throttle-input-for = 30
screenchange-reload = true
pseudo-transparency = true

[module/date]
type = internal/date
time = %H:%M:%S
format = TIME <label>
#format-background = #55ff3399
format-foreground = ${colors.color1} 
format-padding = 1
label = %time%
label-foreground = ${colors.foreground} 

[module/battery]
type = internal/battery
battery = BAT0
adapter = AC
full-at = 98

format-charging = BAT <label-charging>
format-discharging = BAT <label-discharging>
format-full = BAT <label-full>
label-charging = %percentage%%
label-discharging = %percentage%%

label-charging-foreground = ${colors.foreground}
label-discharging-foreground = ${colors.foreground}
label-full-foreground = ${colors.foreground}

format-charging-foreground = ${colors.color1}
format-discharging-foreground = ${colors.color1}
format-full-foreground = ${colors.color1}

format-charging-padding = 1
format-discharging-padding = 1
format-full-padding = 1

[module/network]
type = internal/network
interface = wlp2s0
interval = 3.0
unknown-as-up = true
accumulate-stats = true

format-connected = WIFI <label-connected>
label-connected = %essid%
format-connected-padding = 1
format-connected-foreground = ${colors.color1}
label-connected-foreground = ${colors.foreground}

[module/alsa]
type = internal/alsa

format-volume = VOL <label-volume>
label-muted = muted
label-muted-padding = 1
label-volume-foreground = ${colors.foreground}
format-volume-foreground = ${colors.color1}
format-volume-padding = 1

[module/backlight]
type = custom/script
exec = light -G
scroll-up = light -A 5
scroll-down = light -U 5
label = %output%%
click-left = "light -S 100%"
interval = .5

format = BL <label>
format-padding = 1
format-foreground = ${colors.color1}
label-foreground = ${colors.foreground}
